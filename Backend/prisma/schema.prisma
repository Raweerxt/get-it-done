// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // หรือ "mysql", "sqlite"
  url      = env("DATABASE_URL")
}

// โมเดล User เก็บ username และ password ที่เข้ารหัสแล้ว
model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  
  // User 1 คน มีได้หลาย Session
  sessions  FocusSession[]

  createdAt DateTime @default(now())
}

// โมเดล FocusSession ตารางที่จะเก็บข้อมูลการโฟกัสทั้งหมด
model FocusSession {
  id        Int      @id @default(autoincrement())
  taskName  String   @default("Focus Session")
  durationMinutes Float  // เก็บเป็นนาที (Float เผื่อมี 1.5 นาที)
  
  // Session นี้ เป็นของ User คนไหน
  user      User     @relation(fields: [userId], references: [id])
  userId    Int

  createdAt DateTime @default(now()) // เก็บวันที่และเวลาที่บันทึก
}